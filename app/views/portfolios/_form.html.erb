<%= form_for(portfolio_item) do |form| %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :portfolio_item_title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, id: :portfolio_item_sub_title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, id: :portfolio_item_body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :main_image %>
    <%= form.text_area :main_image, id: :portfolio_item_main_image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :thumb_image %>
    <%= form.text_area :thumb_image, id: :portfolio_item_thumb_image, class: "form-control" %>
  </div>
  <hr>
  <h3>Tehnologies:</h3>
  <div>
    <%= form.fields_for :technologies do |t| %>
      <div class="form-group">
        <%= t.label :name %>
        <%= t.text_field :name, class: 'form-control' %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit value: 'Save Portfolio Item', class: 'btn btn-block btn-primary' %>
  </div>
<% end %>
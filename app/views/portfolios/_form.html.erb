<%= form_for(portfolio_item) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, id: :portfolio_item_title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, id: :portfolio_item_sub_title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :main_image %>
        <%= form.file_field :main_image, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :thumb_image %>
        <%= form.file_field :thumb_image, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, id: :portfolio_item_body, rows: 14, class: "form-control" %>
      </div>
    </div>
  </div>  
  <hr>
  <h3>Tehnologies:</h3>
  <div>
    <%= form.fields_for :technologies do |t| %>
      <div class="form-group">
        <%= t.label :name %>
        <%= t.text_field :name, class: 'form-control' %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit value: 'Save Portfolio Item', class: 'btn btn-block btn-primary' %>
  </div>
<% end %>